{
  "name": "elm-freecell",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "clean": "rimraf docs",
    "watch:html": "cpx -w src/index.html docs",
    "watch:assets": "cpx -w \"src/assets/**/*\" docs/assets",
    "watch:js": "cpx -w src/main.js docs",
    "watch:elm": "wait-on docs/style.css && elm-live src/Main.elm --start-page=index.html --dir=docs -- --output=docs/elm.js",
    "watch:sass": "sass --watch src:docs",
    "watch": "npm-run-all -p watch:*",
    "compile:html": "cpx src/index.html docs",
    "compile:assets": "cpx \"src/assets/**/*\" docs/assets",
    "compile:js": "cpx src/main.js docs",
    "compile:elm": "elm make src/Main.elm --optimize --output=docs/elm.optimized.js",
    "compile:sass": "sass --style=compressed --no-source-map src:docs",
    "compile": "npm-run-all -p compile:*",
    "minify:elm": "google-closure-compiler --js=docs/elm.optimized.js --js_output_file=docs/elm.js && rimraf doc/elm.optimized.js",
    "build": "npm-run-all -s clean compile minify:elm",
    "start": "npm-run-all -s clean watch",
    "test": "elm-test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ny-a/elm-freecell.git"
  },
  "author": "Ny-a",
  "bugs": {
    "url": "https://github.com/ny-a/elm-freecell/issues"
  },
  "homepage": "https://github.com/ny-a/elm-freecell#readme",
  "devDependencies": {
    "cpx": "^1.5.0",
    "elm": "^0.19.1-5",
    "elm-live": "^4.0.2",
    "elm-test": "^0.19.1-revision7",
    "google-closure-compiler": "^20210601.0.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "sass": "^1.37.0",
    "wait-on": "^6.0.0"
  }
}
